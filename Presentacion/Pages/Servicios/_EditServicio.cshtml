<div id="myModalEditServicio" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Servicio</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" onsubmit="return false;">
                    <div class="form-group">
                        <label for="txtNombreEdit" class="control-label col-sm-3">Nombre (*):</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtNombreEdit" placeholder="Nombre del Servicio" maxlength="100">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtCostoEdit" class="control-label col-sm-3">Costo (*):</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="txtCostoEdit" placeholder="Costo del Servicio"
                                   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                   maxlength="8">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtPrecioEdit" class="control-label col-sm-3">Precio (*):</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="txtPrecioEdit" placeholder="Precio de Venta"
                                   oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                   maxlength="8">
                        </div>
                    </div>
                    <div class="form-group" id="divGanancia">
                        <label class="control-label col-sm-3">Ganancia:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtGananciaServicio" disabled="disabled">
                            <small id="helperPorcentaje" class="form-text text-muted">Helper Text</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success waves-effect waves-light" id="btnEditServicio">Guardar</button>
            </div>
        </div>
    </div>
</div>